<Window x:Class="DiagramMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiagramMaker"
        mc:Ignorable="d"
        x:Name="Window"
        Title="Diagram Maker" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="Canvas"/>
        <Button Content="Add Node" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="100" Click="NodeButton_Click"/>
        <Button x:Name="ConnectButton" Content="Connect Nodes" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="100" Margin="0,100,0,0" Click="ConnectButton_Click"/>
        <Button Content="Print" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="100" Margin="0,200,0,0" Click="PrintButton_Click"/>
    </Grid>
</Window>
