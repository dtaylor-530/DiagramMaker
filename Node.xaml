<UserControl x:Class="DiagramMaker.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiagramMaker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="150" Height="100" MinWidth="150" MinHeight="100" Background="Beige">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock x:Name="Header" Margin="10,2,10,2" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Text="ClassName"/>
            <Rectangle Fill="Black" Grid.Row="1" Height="1" />
            <TextBlock x:Name="VariablesTextBlock" Margin="10,0,10,0" Grid.Row="2"/>
            <Rectangle Fill="Black" Grid.Row="3" Height="1" />
            <TextBlock x:Name="MethodsTextBlock" Margin="10,0,10,0" Grid.Row="4"/>
        </Grid>
    </Border>
</UserControl>
